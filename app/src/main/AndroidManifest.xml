<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quanticheart.biometric">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.quanticheart.biometric.biometric.EnableBiometricLoginActivity"
            android:label="@string/title_activity_enable_biometric_login"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.quanticheart.biometric.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.quanticheart.biometric.home.HomeActivity" />
        <activity android:name="com.quanticheart.biometric.secret.SecretDataActivity" />
    </application>

</manifest>